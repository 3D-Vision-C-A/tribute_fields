<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form_inherit_tribute_fields" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='default_taxes_setting_container']" position="inside">
        <div class="o_setting_box">
          <div class="o_setting_left_pane">
            <field name="show_fiscal_fields"/>
          </div>
          <div class="o_setting_right_pane">
            <label for="show_fiscal_fields"/>
            <span class="fa fa-lg fa-building-o"/>
            <div class="text-muted">
                Enable fields for the registration of the fiscal Control and Correlative Number
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form_inherit_tribute_fields" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='tax_fiscal_country_234']" position="after">
        <div class="col-12 col-lg-6 o_setting_box">
          <div class="o_setting_left_pane"/>
          <div class="o_setting_right_pane">
            <label for="invoice_print_method"/>
            <span class="fa fa-lg fa-building-o" title="Show Fiscal Fields"/>
            <div class="text-muted">
                Enable fields for the registration of the fiscal Control and Correlative Number
            </div>
            <field name="invoice_print_method"/>
          </div>
        </div>
        <div class="col-12 col-lg-6 o_setting_box">
          <div class="o_setting_left_pane"/>
          <div class="o_setting_right_pane">
            <label for="fiscal_currency_id"/>
            <span class="fa fa-lg fa-building-o" title="Fiscal Currency"/>
            <div class="text-muted">
                Select your fiscal currency for the impression of invoices
            </div>
            <field class="ml-2" name="fiscal_currency_id"/>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>
